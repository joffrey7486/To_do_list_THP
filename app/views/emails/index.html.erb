
<h1>Emails <i class="fab fa-angellist"></i></h1>
<%= link_to "Recevoir un email", emails_path, remote: true, method: :post, class:"btn btn-outline-primary" %>
<div class="col-lg-12 mb-30">
    <div class="portlet-box">
        <div class="portlet-header flex-row flex d-flex align-items-center">
            <div class="flex d-flex flex-column"></div>
            </div>
        </div>
        <div class="portlet-body pt-1 pb-1">
            <table class="table table-bordered table-hover mb-0">
            <thead>
            <tr>
                <th class="col-2">Liste des emails</th>
                <th class="col-4">Email sélectionné</th>
            </tr>
            </thead>
            <tbody>
                <% @emails.each do |email| %>
                <%= render 'email', email: email %>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>
