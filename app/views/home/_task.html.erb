<li>
  <%= check_box_tag :status, 1, task.status , data: { remote: true, url: task_path(task), params: { id: task.id, status: true}.to_param, method: "put" }%>
  <%= task.title  %>
  <% unless task.deadline.nil? %>
    , to read: <%= task.deadline.strftime('%D')  %>
  <% end %>
  <%= link_to "", task_path(task), method: :delete, class: "fas fa-trash-alt", remote: true %>
  status = <%= task.status %>
</li>
